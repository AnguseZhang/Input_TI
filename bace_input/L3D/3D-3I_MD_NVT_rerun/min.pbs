echo $PBS_O_WORKDIR
cd $PBS_O_WORKDIR

#-------------- Load Modules ------------------
module swap gnu intel
module load openmpi
module load amber

exe=$AMBERHOME/bin/pmemd.MPI
num=2
#-------------- Run job -----------------------

mpirun -np $num $exe -O -i 0.5_min_0.in -p 3D-3I_merged.prmtop -c 3D-3I_merged.inpcrd -o 0.5_min_0.out -r 0.5_min_0.rst -inf 0.5_min_0.mdinfo -x 0.5_min_0.netcdf 
